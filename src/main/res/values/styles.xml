<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/lakerPurple</item>
        <!-- Secondary theme color of the app -->
        <item name="colorPrimaryDark">@color/lakerPurple</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/lakerPurple</item>
    </style>

    <style name="TeamName" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lakerPurple</item>
    </style>

    <style name="Score" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/lakerPurple</item>
    </style>

    <style name="PlayerButton">
        <item name="android:textColor">@color/lakerGold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


</resources>